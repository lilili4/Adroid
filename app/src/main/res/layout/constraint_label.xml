<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:padding="5dp">

    <TextView android:id="@+id/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="30dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="RED"
        android:textSize="25dp"/>

    <TextView android:id="@+id/orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        android:background="@color/orange"
        android:gravity="center"
        android:text="One,Two"
        android:textSize="25dp"/>

    <TextView android:id="@+id/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:background="@color/yellow"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="30dp"
        android:text="yellow"
        android:textSize="25dp"/>


    <TextView android:id="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orange"
        android:padding="30dp"
        android:background="@color/blue"
        android:layout_centerHorizontal="true"
        android:text="blue"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="25dp"
        />

    <TextView android:id="@+id/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:background="@color/green"
        android:layout_below="@id/orange"
        android:layout_toLeftOf="@id/blue"
        android:text="green"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="25dp"/>

    <TextView android:id="@+id/indigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:background="@color/indigo"
        android:layout_below="@id/orange"
        android:layout_toRightOf="@id/blue"
        android:text="indigo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textSize="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/indigo"
        android:layout_marginTop="50dp"
        android:padding="30dp"
        android:background="@color/violet"
        android:text="violet"
        android:gravity="center"
        android:textSize="25dp"/>

</RelativeLayout>
